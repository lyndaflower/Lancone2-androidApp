<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/choice"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Perfume is the key to our memories"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Type your name "
        android:inputType="textPersonName"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1"
        android:layout_below="@+id/text1"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Type your email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2"
        android:textStyle="bold"
        android:layout_below="@+id/text2"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Type location "
        android:inputType="text" />

    <EditText
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text3"
        android:layout_alignStart="@+id/text3"
        android:textStyle="bold"
        android:layout_below="@+id/text3"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Name of parfume"
        android:inputType="text" />
    <Button
        android:id="@+id/makeChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:text="make your choice "
        android:textColor="@color/colorTextIcons" />



</RelativeLayout>